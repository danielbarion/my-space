.input
	position relative
	width 100%
	height 2rem
	font-size 1rem
	display flex
	align-items center
	position relative

	input
		border 0
		border-bottom 1px solid #ABABAB
		outline none
		transition .2s ease
		box-sizing border-box
		background-color transparent
		z-index 2
		color #616161
		font-family Ubuntu
		font-weight 600
		font-size 14px
		font-weight 500
		line-height 19px

	label
		display flex
		flex-direction column
		color #ABABAB
		box-sizing border-box
		cursor text
		font-family Ubuntu
		font-size 14px
		font-weight 500
		height 100%
		position absolute
		top 5px
		transition .2s ease
		z-index 1

	input:valid,
	input:focus
		border-bottom 1px solid #616161

	input:valid + label,
	input:focus + label
		color #616161
		font-size 10px
		top -1rem
		pointer-events none
