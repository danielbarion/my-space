.character-card
	display grid
	grid-area cards
	grid-template-areas 'thumbnail'
	grid-template-rows auto
	cursor pointer

	&-content

		&-thumbnail
			position relative
			grid-area thumbnail
			height 200px

			&:hover > &-overlay
					opacity 1

			& img
				max-width 100%
				height 200px
				border-radius 10px

			&-overlay
				display flex
				opacity 0
				justify-content center
				align-items center
				top 0
				left 0
				position absolute
				border-radius 10px
				background-color rgba(0, 0, 0, 0.7)
				height 100%
				width 100%
				color aliceblue
				word-break break-word
				transition opacity 300ms

				& span
					padding 1rem
					text-align center
