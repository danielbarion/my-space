.app
	display grid
	grid-template-areas 'navbar'\
											'content'
	grid-template-rows 60px auto
	height 100vh
	width 100vw
	background-color #fff

	&-navbar
		height 100%
		width 100%
		background-color aliceblue
		box-shadow 0 3px 5px 0 rgba(0,0,0,0.12),
						0 2px 5px 1px rgba(97,218,251, 0.25)

	&-content
		display grid
		grid-template-areas 'search'\
												'cards'
		grid-template-rows 35px auto
		padding-top 10rem
		padding-right 15rem
		padding-left 15rem

		&-search
			display grid
			grid-template-areas 'icon input'
			grid-template-columns 32px 1fr
			align-items center
			grid-area search
			background #FFF
			width 12rem
			border-radius 20px
			box-shadow 0 3px 5px 0 rgba(0,0,0,0.15),
							   0 2px 5px 1px rgba(97,218,251, 0.25),
							   inset 0 0.1px 0.5px 0.5px rgba(97,218,251, 0.25)
			border 1px solid aliceblue

			&-icon
				grid-area icon
				display flex
				justify-self flex-end

				& svg
					color rgba(140,148,155, 0.3)

		&-card-list
			display flex
			align-content baseline
			flex-wrap wrap
			margin-top 1rem
			padding-left 0.35rem

			&-card
				margin-top 1rem
				margin-right 1rem
				height 200px
				width 160px
				min-height 200px
				min-width 160px
				max-height 200px
				max-width 160px
				background-color #fff
				box-shadow 0 3px 5px 0 rgba(0,0,0,0.15),
						0 2px 5px 1px rgba(97,218,251, 0.25),
						inset 0 0.1px 0.5px 0.5px rgba(97,218,251, 0.25)
