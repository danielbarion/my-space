.app
	display grid
	grid-template-areas 'content'
	grid-template-rows auto
	height 100vh
	width 100vw
	background-color #fff

	&-navbar
		height 100%
		width 100%
		background-color aliceblue
		box-shadow 0 3px 5px 0 rgba(0,0,0,0.12),
						0 2px 5px 1px rgba(97,218,251, 0.25)

	&-content
		display grid
		grid-template-areas 'header'\
												'cards'\
												'pagination'
		grid-template-rows 35px auto 30px
		padding-top 10rem
		padding-right 15rem
		padding-left 15rem

		&-header
			grid-area header
			display grid
			grid-template-areas 'search pagination'
			grid-template-columns 1fr 1fr

			&-search
				display grid
				grid-template-areas 'icon input'
				grid-template-columns 32px 1fr
				align-items center
				grid-area search
				background #FFF
				width 40px
				border-radius 20px
				box-shadow 0 3px 5px 0 rgba(0,0,0,0.15),
									0 2px 5px 1px rgba(97,218,251, 0.25),
									inset 0 0.1px 0.5px 0.5px rgba(97,218,251, 0.25)
				border 1px solid aliceblue
				cursor pointer
				transition width 0.3s ease

				&[active=true]
					width 20rem

				&-input
					padding-left 0.6rem
					display none

					&[active=true]
						display block

					input
						margin 0
						border 0
						padding 0
						display inline-block
						vertical-align middle
						white-space normal
						background none
						font-size  12px
						font-family 'ubuntu'
						font-weight 600
						-webkit-box-sizing content-box
						-moz-box-sizing content-box
						box-sizing content-box
						color #616161
						width 95%
						min-width 35px
						max-width 95%
						transition width 0.25s
						white-space nowrap
						overflow hidden
						text-overflow ellipsis

						&::placeholder
							color #ababab

						&:focus
							outline 0

				&-icon
					grid-area icon
					display flex
					justify-self flex-end

					& svg
						color rgba(140,148,155, 0.5)

			&-pagination
				grid-area pagination
				display flex
				justify-content flex-end
				align-items center
				padding-right 0.75rem

				&-first-page
					display flex
					align-items center
					justify-content center
					margin-right 0.75rem
					transform rotate(270deg)
					background-color #61DAFB
					border-radius 50%
					padding 1px
					cursor pointer
					box-shadow -2px 0 5px 0 rgba(0,0,0,0.15),
										 -2px 0 5px 1px rgba(97,218,251, 0.25)
					color aliceblue

				&-previous-page
					display flex
					align-items center
					justify-content center
					margin-right 0.75rem
					background-color #61DAFB
					border-radius 50%
					padding 1px
					cursor pointer
					box-shadow 0 2px 5px 0 rgba(0,0,0,0.15),
										 0 2px 5px 1px rgba(97,218,251, 0.25)
					color aliceblue

				&-next-page
					display flex
					align-items center
					justify-content center
					margin-left 0.75rem
					background-color #61DAFB
					border-radius 50%
					padding 1px
					cursor pointer
					box-shadow 0 2px 5px 0 rgba(0,0,0,0.15),
								  	 0 2px 5px 1px rgba(97,218,251, 0.25)
					color aliceblue

				&-last-page
					display flex
					align-items center
					justify-content center
					margin-left 0.75rem
					transform rotate(90deg)
					background-color #61DAFB
					border-radius 50%
					padding 1px
					cursor pointer
					box-shadow 3px 0 5px 0 rgba(0,0,0,0.15),
										 2px 0 5px 1px rgba(97,218,251, 0.25)
					color aliceblue

				&-number
					cursor pointer
					display flex
					align-items center
					justify-content center
					padding 0.45rem
					font-size 10px
					min-width 10px
					max-height 10px
					font-family 'ubuntu'
					border-radius 50%
					color rgba(140,148,155, 1)
					box-shadow 0 2px 5px 0 rgba(0,0,0,0.15),
								0 2px 5px 1px rgba(97,218,251, 0.25),
								inset 0 0.1px 0.5px 0.5px rgba(97,218,251, 0.25)

		&-card-list
			display flex
			align-content baseline
			flex-wrap wrap
			margin-top 1rem
			padding-left 0.35rem

			&-card
				margin-top 1rem
				margin-right 1rem
				height auto
				width calc(20% - 1rem)
				min-height 200px
				min-width 160px
				background-color #fff
				box-shadow 0 2px 5px 0 rgba(0,0,0,0.15),
						0 2px 5px 1px rgba(97,218,251, 0.25),
						inset 0 0.1px 0.5px 0.5px rgba(97,218,251, 0.25)

.animationPulse
	animation pulse 600ms
	box-shadow 0 0 0 10px rgba(#fff, 0)
	border-radius 50%

@keyframes pulse {
  0% { box-shadow: 0 0 0 0 #61DAFB; }
}
